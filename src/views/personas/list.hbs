<div class="container">
    <div class="row mt-5">

        <h3>Lista de personas</h3>
        {{#if personas}}
        
        <div class="col-md-3">
            <table>
                <thead>
                    <tr class="table-dark">
                        <th>Nombre</th>
                        <th>Apellido</th>
                        <th>Edad</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each personas}}
                    <tr>
                        <td>{{name}}</td>
                        <td>{{lastname}}</td>
                        <td>{{age}}</td>
                        <td>
                            <div class="btn-group">
                                <a href="/edit/{{id}}" class="btn btn-warning">Editar</a>
                                <a href="/delete/{{id}}" class="btn btn-success">Eliminar</a>
                            </div>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
                <tfoot class="table-dark">
                    <tr>
                        <td>registro de peronas</td>
                    </tr>
                </tfoot>
            </table>
        </div>
        
        {{else}}
        <div class="card text-center mx-auto">
            <div class="card-header">
                <h3>Debes crear una persona</h3>
            </div>  
            <div class="card-body">
                <p>presiona este boton para q puedas registrar una persona</p>
                <a href="#" class="btn btn-primary">Ir a crear</a>
            </div>
        </div>
        {{/if}}
    </div>
</div>